# .env.example
# Copiar a .env y actualizar valores según ambiente

# ==========================================
# BASE DE DATOS
# ==========================================
# Usar puerto 6543 para PgBouncer (pooler de Supabase)
# El parámetro pgbouncer=true es necesario para compatibilidad
DATABASE_URL=postgresql://usuario:contraseña@host:6543/database?pgbouncer=true

# ==========================================
# SERVIDOR
# ==========================================
PORT=3001
NODE_ENV=development
# Valores: development | production | test

# ==========================================
# LOGGING
# ==========================================
LOG_LEVEL=info
# Valores: error | warn | info | debug | trace

DEBUG_REQUESTS=false
DEBUG_SQL=false
# Establecer true para ver detalles en desarrollo

# ==========================================
# CORS Y SEGURIDAD
# ==========================================
FRONTEND_URL=http://localhost:3000

# ==========================================
# CACHÉ
# ==========================================
CACHE_TTL_CASOS=300
CACHE_TTL_CLIENTES=600
CACHE_TTL_STATS=900
# Valores en segundos

# ==========================================
# LIMITS Y TIMEOUTS
# ==========================================
MAX_PAGE_SIZE=1000
DEFAULT_PAGE_SIZE=50
REQUEST_TIMEOUT=30000
# En milisegundos
